{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "loi-document.schema.json",
  "title": "Location of Interest",
  "type": "object",
  "required": [
    "jobId",
    "geometry"
  ],
  "properties": {
    "jobId": {
      "type": "string"
    },
    "customId": {
      "type": "string"
    },
    "geometry": {
      "$ref": "geometry.schema.json"
    },
    "properties": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "number",
          "string"
        ]
      }
    },
    "submissionCount": {
      "type": "integer"
    }
  },
  "additionalProperties": false
}
